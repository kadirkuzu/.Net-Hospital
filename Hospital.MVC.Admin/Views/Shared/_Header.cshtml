<style>
    .header {
        background-color: white;
        padding: 15px 0;
        border-bottom: 1px solid #ddd;
    }

    img.hospital-image {
        width: 35%;
        height: auto;
    }

    .link-title {
        text-decoration: none;
        color: black;
        font-weight: 500;
        font-size: 18px;
        margin-right: 15px;
        padding-bottom: 5px;
        cursor: pointer;
    }

    .link-title:hover {
        padding-bottom: 10px;
    }

    .nav-item {
        display: inline-block;
    }

    .nav {
        display: flex;
        align-items: center;
        margin: 0;
    }

    a{
        text-decoration:none
    }

</style>

<div class="header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-2">
                <a asp-controller="home" asp-action="">
                    <img class="hospital-image" src="~/images/hospital.png" />
                </a>
            </div>
            <div class="col-10 d-flex justify-content-between">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link link-title" asp-controller="department" asp-action="">
                            Departments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link link-title" asp-controller="clinic" asp-action="">
                            Doctors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link link-title" asp-controller="clinic" asp-action="">
                            Patients
                        </a>
                    </li>

                </ul>
                <ul class="nav">
                    @if (ViewContext.HttpContext.Request.Cookies["hospitalUserToken"] == null)
                    {
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Login">
                                <button type="submit" class="btn btn-primary">
                                    Login
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout">
                                <button type="submit" class="btn btn-danger">
                                    Logout
                                </button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
