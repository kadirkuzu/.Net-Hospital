@using Hospital.Models.Hospital.RequestDto.Doctor;
@model AddDoctorViewModel;
<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-5">
        <div class="main-card">
            <form asp-action="SendCreate">
                <input type="hidden" asp-for="Request.ClinicId" />
                
                <div>
                    <label asp-for="Request.Name" class="form-label"></label>
                    <input asp-for="Request.Name" class="form-control" placeholder="Doctor Name">
                    <span asp-validation-for="Request.Name" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Request.Surname" class="form-label"></label>
                    <input asp-for="Request.Surname" class="form-control" placeholder="Doctor Surname">
                    <span asp-validation-for="Request.Surname" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Request.Email" class="form-label"></label>
                    <input asp-for="Request.Email" class="form-control" placeholder="Doctor Email">
                    <span asp-validation-for="Request.Email" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Request.Phone" class="form-label"></label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">+90</span>
                        </div>
                        <input id="phoneInput" asp-for="Request.Phone" class="form-control" placeholder="Doctor Phone">
                    </div>
                    <span asp-validation-for="Request.Phone" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Request.WorkSchedules" class="form-label"></label>
                    <select class="form-select" asp-for="Request.WorkSchedules" asp-items="@Model.WorkSchedulesList"></select>
                    <span asp-validation-for="Request.WorkSchedules" class="text-danger"></span>

                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary w-100">Add Doctor</button>
                </div>
            </form>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#phoneInput').mask('(000) 000-0000');
        });
    </script>
}