@{
    ViewData["Title"] = "Home";
}
<style>
    body {
        background-image: url("../images/hospital-bg.jpg");
        background-repeat: no-repeat;
        background-size: 100% 100%;
    }

    .main-card {
        background-color: white;
        color: black;
    }

    .col-lg-3 {
        margin-top: 15%;
    }

    .col-xl-3 {
        margin-top: 15%;
    }

</style>
<body>
    <div class="row justify-content-center w-100">
        <div class="col-3 text-center mt-3 fw-bold main-card text-primary">
            Welcome To Admin Page
        </div>
    </div>
    <div class="row justify-content-around w-100">
        <div class="col-12 col-xs-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">
            <div class="main-card">
                <div class="fw-bold fs-5">
                    Companies
                </div>
                <div>
                    From <span routerLink="/add-company" class="router-text">here</span> you can add your companies.
                </div>
                <div class="mt-1">
                    And you can see your companies and do other operations from
                </div>
                <div class="mt-1">
                    <div class="router-text">Airport Managements</div>
                    <div class="router-text">Manufecturers</div>
                    <div class="router-text">Plane Owners</div>
                    <div class="router-text">Ground Services</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-xs-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">
            <div class="main-card">
                <div class="fw-bold fs-5">
                    Employees
                </div>
                <div>
                    From <span routerLink="/add-employee" class="router-text">here</span> you can add your employees.
                </div>
                <div class="mt-1">
                    And you can see your employees and do other operations from
                </div>
                <div class="mt-1">
                    <div class="router-text">Pilots</div>
                    <div class="router-text">Cabin Personels</div>
                    <div class="router-text">Cabin Crews</div>
                    <div class="router-text">Ground Services Chiefs</div>
                    <div class="router-text">Ground Services Personels</div>
                    <div class="router-text">Ground Services Crews</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-xs-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">
            <div class="main-card">
                <div class="fw-bold fs-5">
                    Customers
                </div>
                <div>
                    From <span routerLink="/customers" class="router-text">here</span> you can see your customers.
                </div>
                <div class="mt-1">
                    And you can add your customers , add trips and do other operations from
                </div>
                <div class="mt-1">
                    <div class="router-text">Add Customer</div>
                    <div class="router-text">Trips</div>
                </div>
            </div>
        </div>
    </div>
</body>