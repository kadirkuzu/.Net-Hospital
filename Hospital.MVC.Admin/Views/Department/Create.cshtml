@using Hospital.Models.Hospital.RequestDto;
@model DepartmentRequestDto;
<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-5">
        <div class="main-card">
            <form asp-action="SendCreate">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Department Name">
                <span asp-validation-for="Name" class="text-danger"></span>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary w-100">Add Department</button>
                </div>
            </form>
            @if (ViewBag.ErrorMessage!=null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}