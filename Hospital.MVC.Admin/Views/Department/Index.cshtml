@model IEnumerable<Hospital.Models.Hospital.ResponseDto.GetDepartmentResponseDto>

@{
    ViewData["Title"] = "Departments";
}

<div class="d-flex justify-content-between align-items-center">
    <h4>Departments</h4>
    <form asp-action="create">
        <button type="submit" class="btn btn-outline-secondary">
            Add Department
        </button>
    </form>
</div>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
<div class="main-card mt-4">
    <table class="table">
        <thead>
            <tr>
                <th style="width: 20%;">
                    Name
                </th>
                <th class="text-center" style="width: 20%;">
                    Clinics
                </th>
                <th class="text-center" style="width: 20%;">
                    Doctors
                </th>
                <th style="width: 40%;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td class="text-center">
                        @item.Clinics.Count()
                    </td>
                    <td class="text-center">
                        @item.Clinics.Sum(x=>x.Doctors.Count())
                    </td>
                    <td class="text-end">
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id , Name = item.Name }) |
                        @Html.ActionLink("Show Clinics", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


