@using Hospital.Models.Hospital.RequestDto;
@using Hospital.Models.Hospital.ResponseDto;
@model GetClinicResponseDto;

@{
    ViewData["Title"] = "Clinics";
}

<div class="d-flex justify-content-between align-items-center">
    <h4>@Model.DepartmentName > @Model.Name</h4>
    <form asp-controller="Doctor" asp-action="create" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-outline-secondary">
            Add Doctor
        </button>
    </form>
</div>

<div class="main-card mt-4">
    @if (Model.Doctors.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th style="width: 30%;">
                        Doctor Name
                    </th>
                    <th style="width: 70%;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Doctors)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td class="text-end">
                            @Html.ActionLink("Edit", "Edit","Clinic", new { id=item.Id , departmentId=Model.Id , Name=item.Name }) |
                            @Html.ActionLink("Details", "Details","Clinic", new { }) |
                            @Html.ActionLink("Delete", "Delete","Clinic", new {})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-dark" role="alert">
            No doctor added yet
        </div>
    }
</div>
